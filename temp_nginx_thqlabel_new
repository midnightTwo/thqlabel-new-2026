server {
    if ($host = www.thqlabel.ru) {
        return 301 https://$host$request_uri;
    }
    if ($host = thqlabel.ru) {
        return 301 https://$host$request_uri;
    }
    listen 80;
    server_name thqlabel.ru www.thqlabel.ru;
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        client_max_body_size 100M;
        proxy_hide_header X-Powered-By;
    }
}

server {
    listen 443 ssl;
    server_name thqlabel.ru www.thqlabel.ru;
    ssl_certificate /etc/letsencrypt/live/thqlabel.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/thqlabel.ru/privkey.pem;

    # Статические ассеты Next.js — долгий кэш (хэш в имени файла)
    location /_next/static/ {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }

    # HTML-страницы — БЕЗ КЭША (чтобы всегда свежий HTML с правильными чанками)
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        client_max_body_size 100M;
        proxy_hide_header X-Powered-By;

        # Запрещаем браузеру кэшировать HTML
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
}
